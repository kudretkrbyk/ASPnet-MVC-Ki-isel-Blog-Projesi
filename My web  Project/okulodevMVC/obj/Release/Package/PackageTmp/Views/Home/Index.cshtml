@using okulodevMVC.Models.Siniflar
@model List<ForImage>
@{
    ViewBag.Title = "Home Page";
}


<div id="myCarousel" class="carousel slide">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <div class="fill" style="background-image:url('/img/istanbul.png');"></div>
            <div class="carousel-caption">
                <h2>Türkiye'nin AŞKenti  İSTANBUL</h2>
                <a href="#" class="button">Devamını Gör</a>
            </div>
        </div>
        @foreach (var x in Model)
        {
        <div class="item">
            <div class="fill" style="background-image:url('@x.ImgUrl');"></div>
            <div class="carousel-caption">
                <h2>@x.ImgDetail</h2>
                <a href="#" class="button">Devamını Gör</a>
            </div>
        </div>
        }
