@model okulodevMVC.Models.Siniflar.yeni

@{
    ViewBag.Title = "yeniIcerik";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni İçerik Ekleme</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x=>x.ResimAlt)
    @Html.TextBoxFor(x=>x.ResimAlt, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x=>x.ResimYolu)
    @Html.TextBoxFor(x=>x.ResimYolu, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">İçeriği Kaydet</button>


</form>

